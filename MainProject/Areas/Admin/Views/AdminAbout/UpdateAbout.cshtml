@using EntityLayer.Concrete
@model EntityLayer.Concrete.About

@{
    ViewBag.Title = "Update About";
    Layout = "_AdminLayout";
}

<h2>Update About</h2>

<form asp-action="UpdateAbout" method="post">
    <div class="form-group">
        <label asp-for="ID" class="control-label"></label>
        <input asp-for="ID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content1" class="control-label"></label>
        <textarea asp-for="Content1" class="form-control"></textarea>
        <span asp-validation-for="Content1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content2" class="control-label"></label>
        <textarea asp-for="Content2" class="form-control"></textarea>
        <span asp-validation-for="Content2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image1" class="control-label"></label>
        <input asp-for="Image1" class="form-control" />
        <span asp-validation-for="Image1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image2" class="control-label"></label>
        <input asp-for="Image2" class="form-control" />
        <span asp-validation-for="Image2" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>