@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "AddAbout";
    Layout = "_AdminLayout";
}
<h2>Admin About Service</h2>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Country</th>
                                <th scope="col">ZIP</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var about in Model)
                            {
                                <tr>
                                    <td>@about.ID</td>
                                    <td>@about.Name</td>
                                    <td>@about.Surname</td>
                                    <td>@about.Content1</td>
                                    <td>@about.Content2</td>
                                    <td>@about.Image1</td>
                                    <td>@about.Image2</td>
                                    <td>
                                        <a href="/Admin/AdminAbout/DeleteAbout/@about.ID" class="btn btn-danger">Sil</a>
                                        <a href="/Admin/AdminAbout/UpdateAbout/@about.ID" class="btn btn-success">GÃ¼ncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

