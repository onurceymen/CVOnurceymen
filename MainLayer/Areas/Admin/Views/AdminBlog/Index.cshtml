@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Blog ID</th>
            <th>Title</th>
            <th>Image Url</th>
            <th>Date Time</th>
            <th>Content</th>
            <th>Rating</th>
            <th>Category ID</th>
            <th>Author ID</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.BlogID</td>
                <td>@blog.Title</td>
                <td>@blog.ImageUrl</td>
                <td>@blog.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@blog.Content</td>
                <td>@blog.BlogRating</td>
                <td>@blog.CategoryID</td>
                <td>@blog.AuthorID</td>
                <td>
                    <a asp-action="UpdateBlog" asp-route-id="@blog.BlogID">Edit</a> |
                    <a asp-action="DeleteBlog" asp-route-id="@blog.BlogID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
